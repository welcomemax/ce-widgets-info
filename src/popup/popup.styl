body
    font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
    margin 0

.popup
    min-width 300px
    background #38393a

    header
    footer
        display flex
        background #ffffff
        color #38393a
        line-height 16px
        justify-content space-between
        align-items center


    header
        padding 10px 16px 12px 16px

        h1
            font-size 14px
            margin 0

        .widgets-count
            font-size 12px

            &-counter
                padding 4px 8px
                margin-right 2px
                border-radius 2px
                background #38393a
                color #fff

    footer
        padding 8px 16px 6px 16px

        .control-btn
            font-size 12px
            padding 4px 12px 4px 18px
            margin-left -18px
            transition color .3s .1s, background .3s, padding .3s .2s
            border-radius 2px
            cursor pointer
            user-select none
            display flex
            align-items center

            &:hover
                background #38393a
                color #fff
                padding 4px 12px 4px 20px

                .control-btn-icon
                    fill #fff

            &-icon
                width 16px
                height 16px
                margin-right 4px
                fill #38393a
                transition fill .3s

        .control-checkbox
            cursor pointer
            font-size 12px

            input
                position relative
                bottom -2px
                margin 0 4px 0 0

    &-main
        background #38393a
        color #ffffff
        overflow hidden
        max-height 0
        opacity 0
        transition max-height .3s .2s, opacity .3s .4s
        border-left 1px solid #303131

        .popup-active &
            max-height 700px
            opacity 1

        &-container
            width 100%
            min-height 100px
            align-items center
            display flex
            flex-direction row

        .loader
            box-sizing border-box
            display block
            position absolute
            top 50%
            left 50%
            border-radius 50%
            border-style solid
            border-top-color transparent
            animation popup-loader 1s infinite linear
            opacity 1
            visibility visible
            width 32px
            height 32px
            margin -16px 0 0 -16px
            border-width 2px
            z-index 1

        .widgets-empty
            text-align center
            font-size 12px
            width 100%

            &-text
            &-reload
                margin 8px 16px

            &-reload
                &-button
                    cursor pointer
                    padding 4px 12px
                    color #38393a
                    background #fff
                    border 1px solid #fff
                    border-radius 2px
                    transition color .3s .1s, background .3s
                    display inline-flex
                    align-items center

                    &:hover
                        color #fff
                        background #38393a

                        &-icon
                            fill #fff

                    &-icon
                        width 16px
                        height 16px
                        margin-right 4px
                        fill #38393a
                        transition fill .3s

                &-status
                    padding 6px 12px

.widget
    &-header
        display flex
        align-items center
        justify-content space-between
        line-height 24px
        padding 8px 16px
        position relative
        cursor pointer
        border-bottom 1px solid #303131
        height 52px
        box-sizing border-box

        &-app
            display flex
            align-items center

            &-icon
                margin-right 8px
                width 32px
                height 32px

            &-title
                font-size 14px
                text-shadow -1px 1px 0 rgba(0, 0, 0, 1)

            &-version
                font-size 10px
                color #FF6162
                text-shadow -1px 1px 0 rgba(0, 0, 0, .1)

                &-actual
                    color #43b300

        &-type
            font-size 10px
            color #b2b4b7

        &:hover
            background #303131

        &-tooltip
            position absolute
            bottom -8px
            left 56px
            padding 4px 12px
            color #fff
            line-height 12px
            font-size 11px
            background #272727
            border-radius 2px
            transition opacity .3s, bottom .3s, padding .3s
            opacity 0
            display flex
            align-items center

            .widget-header:hover &
                opacity 1
                bottom -14px

            &:hover
                padding 4px 8px 4px 12px

            &-icon
                width 12px
                height 12px
                margin-left 4px
                fill #fff
                transition margin .3s

                .widget-header-tooltip:hover &
                    margin-left 8px

    &-settings
        max-height 200px
        background #ffffff
        color #38393a
        border-radius 3px
        padding 4px 8px
        overflow-x hidden
        overflow-y auto
        margin 8px 16px
        font-size 11px

        &::-webkit-scrollbar-track
            background-color #f0f0f0
        &::-webkit-scrollbar
            width 6px
        &::-webkit-scrollbar-thumb
            background-color #888

.ui-carousel
    width 400px

    & .carousel-dots
        bottom -18px

        li button:before
            color #fff

    & .carousel-prev
    & .carousel-next
        & .carousel-btn
            cursor pointer
            margin-top 25px

            i:before
                color #000

    & .carousel-prev
        & .carousel-btn
            left 0

    & .carousel-next
        & .carousel-btn
            right 0

@keyframes popup-loader
    0%
        transform rotate(0deg)

    100%
        transform rotate(360deg)
